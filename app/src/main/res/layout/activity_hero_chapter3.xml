<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HeroChapter3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <longxing.wshoto.com.myapp.widget.CounterView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:count="10"/>

        <longxing.wshoto.com.myapp.widget.BoderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="@string/app_name"/>

        <longxing.wshoto.com.myapp.widget.CircleProcess
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"/>

        <longxing.wshoto.com.myapp.widget.YinpinView
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>
    </LinearLayout>
</ScrollView>
